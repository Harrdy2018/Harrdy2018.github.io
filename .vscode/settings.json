{
    // Controls if quick suggestions should show up while typing
    "editor.quickSuggestions": {
        "other": true,
        "comments": true,
        "strings": false
    },
    // tab是默认接受建议的，用on将enter也可以接受建议
    "editor.acceptSuggestionOnEnter": "on",
    // Controls the delay in ms after which quick suggestions will show up.
    "editor.quickSuggestionsDelay": 10,
    // Controls if suggestions should automatically show up when typing trigger characters
    "editor.suggestOnTriggerCharacters": true,
    // Controls if pressing tab inserts the best suggestion and if tab cycles through other suggestions
    "editor.tabCompletion": "onlySnippets",
    // Controls whether sorting favours words that appear close to the cursor
    "editor.suggest.localityBonus": true,
    // Controls how suggestions are pre-selected when showing the suggest list
    "editor.suggestSelection": "recentlyUsed",
    // Enable word based suggestions
    "editor.wordBasedSuggestions": true,
    // Enables a pop-up that shows parameter documentation and type information as you type.
    "editor.parameterHints.enabled": true,
    "editor.tabSize": 2,
    // Controls the line height. Use 0 to compute the line height from the font size.
    "editor.lineHeight": 25,
    "editor.renderLineHighlight": "none",
    "editor.renderWhitespace": "none",
    // Controls the font family.
    "editor.fontFamily": "Consolas, 'Courier New', monospace",
    "editor.fontSize": 18,
    "editor.cursorBlinking": "smooth",
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.formatOnSave": false,
    "editor.snippetSuggestions": "top",
    // Controls how lines should wrap.
    "editor.wordWrap": "off",
    // Ignores the warning when there are too many changes in a repository.
    "git.ignoreLimitWarning": true,
    // Ignores the warning when Git is missing.
    "git.ignoreMissingGitWarning": true,
    //下面这一项设置只能在 User Settings
    //"git.path": "D:/Git/Git/bin/git.exe",
    "terminal.integrated.shell.windows": "D:/Git/Git/bin/bash.exe",
    //配置文件关联 任何vue后缀的文件会被认为是html文件，然后vscode会用html规则匹配vue文件做相应格式化，代码提示。任何wxss后缀的文件会被认为是css文件
    "files.associations": {
        "*.vue": "html",
        "*.wxss": "css",
        "*.cjson": "jsonc",
         "*.wxs": "javascript"
    },
    "files.exclude": {
        "**/.git": false,
        "**/.svn": true,
        "**/.hg": true,
         "**/CVS": true,
        "**/.DS_Store": true
    },
    //VScode 文件搜索区配置
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/.git": true,
        "**/dist": true,
        "**/build": true,
        "**/elehukouben": true,
        "**/.gitignore": true,
        "**/.svn": true,
        "**/.DS_Store": true,
        "**/.idea": true,
        "**/.vscode": false,
        "**/yarn.lock": true,
        "**/tmp": true
    },
    "explorer.confirmDelete": false, 
}